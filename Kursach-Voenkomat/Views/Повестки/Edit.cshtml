@model Kursach_Voenkomat.Models.Повестки

@{
    ViewData["Title"] = "Изменить";
}

<h1>Изменить</h1>

<h4>Повестки</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID_повестки" />
            <div class="form-group">
                <label asp-for="ID_призывника" class="control-label"></label>
                <select id="ddlПризывники" asp-for="ID_призывника" class="form-control" asp-items="@ViewBag.ID_призывника"></select>
                <span asp-validation-for="ID_призывника" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ID_типа_повестки" class="control-label"></label>
                <select asp-for="ID_типа_повестки" class="form-control" asp-items="ViewBag.ID_типа_повестки"></select>
                <span asp-validation-for="ID_типа_повестки" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Дата_выписки" class="control-label"></label>
                <input asp-for="Дата_выписки" class="form-control" />
                <span asp-validation-for="Дата_выписки" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ID_наименования_статуса_явки" class="control-label"></label>
                <select asp-for="ID_наименования_статуса_явки" class="form-control" asp-items="ViewBag.ID_наименования_статуса_явки"></select>
                <span asp-validation-for="ID_наименования_статуса_явки" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Дата_явки" class="control-label"></label>
                <input asp-for="Дата_явки" class="form-control" />
                <span asp-validation-for="Дата_явки" class="text-danger"></span>
            </div>

            <div style="margin-top: 10px;"></div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-success">Вернуться к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
                        <<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#ddlПризывники").select2();
        });
    </script>
}
