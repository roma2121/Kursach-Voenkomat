@model Kursach_Voenkomat.Models.МедицинскиеДокументы

@{
    ViewData["Title"] = "Создать";
}

<h1>Создать</h1>

<h4>Медицинские документы</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID_призывника" class="control-label"></label>
                <select id="ddlПризывники" asp-for="ID_призывника" class="form-control" asp-items="@ViewBag.ID_призывника"></select>
            </div>
            <div class="form-group">
                <label asp-for="Диагноз" class="control-label"></label>
                <input asp-for="Диагноз" class="form-control" />
                <span asp-validation-for="Диагноз" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Наименование_медицинской_организации" class="control-label"></label>
                <input asp-for="Наименование_медицинской_организации" class="form-control" />
                <span asp-validation-for="Наименование_медицинской_организации" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Дата_выписки_медицинского_заключения" class="control-label"></label>
                <input asp-for="Дата_выписки_медицинского_заключения" class="form-control" />
                <span asp-validation-for="Дата_выписки_медицинского_заключения" class="text-danger"></span>
            </div>

            <div style="margin-top: 10px;"></div>

            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-success">Вернуться к списку</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
                <<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#ddlПризывники").select2();
        });
    </script>
}
