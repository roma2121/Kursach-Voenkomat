@model IEnumerable<Kursach_Voenkomat.Models.Призывники>

@{
    ViewData["Title"] = "Призывники";
}

<h1>Призывники</h1>

<div class="d-flex">
    <p class="mr-2">
        <button type="button" class="create-button" onclick="location.href='@Url.Action("Create")'">Создать</button>
        <button type="button" class="graph-button ml-2" onclick="location.href='@Url.Action("ReportByMonth", new { startDate = ViewBag.StartDate, endDate = ViewBag.EndDate })'">График</button>
    </p>
</div>


<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Имя)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Фамилия)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Отчество)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Дата_рождения)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Номер_телефона)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Пол)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Имя)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Фамилия)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Отчество)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Дата_рождения)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Номер_телефона)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Пол.Пол)
                </td>
                <td>
                    <div class="d-flex justify-content-end">
                        <a asp-action="Edit" asp-route-id="@item.ID_призывника" class="btn btn-success mr-2">Изменить</a>
                        <a asp-action="Details" asp-route-id="@item.ID_призывника" class="btn btn-warning mr-2">Подробности</a>
                        <a asp-action="Delete" asp-route-id="@item.ID_призывника" class="btn btn-danger mr-2">Удалить</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $("#basic-text1").click(function () {
            $("Form").submit();
        })

    </script>
}