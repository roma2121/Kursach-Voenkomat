@model IEnumerable<Kursach_Voenkomat.Models.Призывники>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Имя)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Фамилия)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Отчество)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Дата_рождения)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Номер_телефона)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Пол)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Имя)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Фамилия)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Отчество)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Дата_рождения)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Номер_телефона)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Пол.Пол)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID_призывника">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID_призывника">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID_призывника">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $("#basic-text1").click(function () {
            $("Form").submit();
        })

    </script>
}