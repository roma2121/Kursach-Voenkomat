@model IEnumerable<Kursach_Voenkomat.Models.ОбразовательныеОрганизации>

@{
    ViewData["Title"] = "Образовательные организации";
}

<h1>Образовательные организации</h1>

<p>
    <button type="button" class="create-button" onclick="location.href='@Url.Action("Create")'">Создать</button>
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Наименование_образовательной_организации)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Адрес_образовательной_организации)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.типОбразовательнойОрганизации)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Наименование_образовательной_организации)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Адрес_образовательной_организации)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.типОбразовательнойОрганизации.Наименование_типа_образовательной_организации)
                </td>
                <td>
                    <div class="d-flex justify-content-end">
                        <a asp-action="Edit" asp-route-id="@item.ID_образовательной_организации" class="btn btn-success">Изменить</a> |
                        <a asp-action="Details" asp-route-id="@item.ID_образовательной_организации" class="btn btn-warning">Подробности</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID_образовательной_организации" class="btn btn-danger">Удалить</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
