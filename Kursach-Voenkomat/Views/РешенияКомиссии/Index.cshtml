@model IEnumerable<Kursach_Voenkomat.Models.РешенияКомиссии>

@{
    ViewData["Title"] = "Решения комиссии";
}

<h1>Решения комиссии</h1>

<p>
    <button type="button" class="create-button" onclick="location.href='@Url.Action("Create")'">Создать</button>
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Дата_вынесения_решения)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Решение)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Призывник)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Дата_вынесения_решения)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Решение)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ПризывникФИО)
                </td>
                <td>
                    <div class="d-flex justify-content-end">
                        <a asp-action="Edit" asp-route-id="@item.ID_решения" class="btn btn-success">Изменить</a> |
                        <a asp-action="Details" asp-route-id="@item.ID_решения" class="btn btn-warning">Подробности</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID_решения" class="btn btn-danger">Удалить</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
