@model IEnumerable<Kursach_Voenkomat.Models.Образование>

@{
    ViewData["Title"] = "Образование";
}

<h1>Образование</h1>

<p>
    <button type="button" class="create-button" onclick="location.href='@Url.Action("Create")'">Создать</button>
</p>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Призывник)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Номер_документа_об_образовании)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.уровеньОбразования)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Специальность)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Дата_окончания)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.образовательнаяОрганизация)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ПризывникФИО)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Номер_документа_об_образовании)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.уровеньОбразования.Наименование_уровня_образования)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Специальность)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Дата_окончания)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.образовательнаяОрганизация.Наименование_образовательной_организации)
                </td>
                <td>
                    <div class="d-flex justify-content-end">
                        <a asp-action="Edit" asp-route-id="@item.ID_записи_об_образовании" class="btn btn-success">Изменить</a> |
                        <a asp-action="Details" asp-route-id="@item.ID_записи_об_образовании" class="btn btn-warning">Подробности</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID_записи_об_образовании" class="btn btn-danger">Удалить</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
