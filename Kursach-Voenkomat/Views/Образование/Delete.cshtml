@model Kursach_Voenkomat.Models.Образование

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удалить</h1>

<h3>Вы действительно хотите удалить эту запись?</h3>
<div>
    <h4>Образование</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Призывник)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ПризывникФИО)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Номер_документа_об_образовании)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Номер_документа_об_образовании)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.уровеньОбразования)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.уровеньОбразования.Наименование_уровня_образования)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Специальность)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Специальность)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Дата_окончания)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Дата_окончания)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.образовательнаяОрганизация)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.образовательнаяОрганизация.Наименование_образовательной_организации)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID_записи_об_образовании" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-success">Вернуться к списку</a>
    </form>
</div>
